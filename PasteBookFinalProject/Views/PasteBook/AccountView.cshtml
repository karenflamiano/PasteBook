@model PasteBookFinalProject.Models.PostLoginViewModel

@section Login{

    @using (Html.BeginForm("HomeView", "Pastebook", FormMethod.Post))
    {
        <ul class="nav navbar-nav">

            <li class="nav-item login">
                Welcome @Session["User"] !
            </li>
            <li class="nav-item login">
                <input class="form-control" type="text" placeholder="Search">
            </li>
            <li class="nav-item login">
                <button class="btn  btn-primary" type="submit">Search</button>
            </li>
            <li class="nav-item">
                @Html.ActionLink("Profile Account", "ProfileView", "PasteBook")
            </li>
            <li class="nav-item">
                @Html.ActionLink("Friends", "FriendsView", "PasteBook")
            </li>
            <li class="nav-item">
                @Html.ActionLink("Notifications", "NotificationsView", "PasteBook")
            </li>
            <li class="login">
                <button type="submit" class="btn btn-primary">Logout</button>
            </li>
        </ul>
    }
}


@using (Html.BeginForm("GeneratePost", "PasteBook", FormMethod.Post))
{
<div class="container" id="accountProfile">
    <div class="col-md-4 col-md-offset-1">
        <div class="well well-lg">
            <img src="~/Content/images/user.png" id="userPicture" />
        </div>
    </div>


    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading text-left">
                Heading goes here
            </div>

            <div class="panel-body">
                @Html.TextAreaFor(model => model.PostModel.PostContent, new { @cols = "80", @rows = "4", placeholder = "What's on your mind?" })
            </div>

            <div class="panel-footer text-left">
                <button type="submit" class="btn btn-primary">POST</button>
            </div>
        </div>
    </div>
</div>
}
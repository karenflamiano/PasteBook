@model PasteBookEntityFramework.USER

@section Login{

    @using (Html.BeginForm("AccountView", "Pastebook", FormMethod.Post))
    {
        <ul class="nav navbar-nav">
            <li class="nav-item login">
                Welcome @Session["User"] !
            </li>
            <li class="nav-item login">
                <input class="form-control" type="text" placeholder="Search">
            </li>
            <li class="nav-item login">
                <button class="btn  btn-primary" type="submit">Search</button>
            </li>
            <li class="nav-item">
                @Html.ActionLink("Profile Account", "ProfileView", "PasteBook")
            </li>
            <li class="nav-item">
                @Html.ActionLink("Friends", "FriendsView", "PasteBook")
            </li>
            <li class="nav-item">
                @Html.ActionLink("Notifications", "NotificationsView", "PasteBook")
            </li>s
            <li class="login">
                <button type="submit" class="btn btn-primary">Logout</button>
            </li>
        </ul>

    }
}

<div class="container" id="accountProfile">
    <div class="col-md-4 col-md-offset-1">
        <div class="well well-lg">
            <img src="~/Content/images/user.png" id="userPicture" />
        </div>
        <div class="well well-lg">
            <div class="col-md-6">
                FirstName:
            </div>
            <div class="col-md-6">
                @Model.FIRST_NAME
                @Model.LAST_NAME
                @Model.BIRTHDAY
                @Model.GENDER
                @Model.EMAIL_ADDRESS
            </div>


        </div>
    </div>


    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading ">Heading goes here</div>
            <div class="panel-body">
                Here is our panel-content
            </div>
            <div class="panel-footer">Footer goes here</div>
        </div>
    </div>
</div>

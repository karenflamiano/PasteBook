<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pastebook</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            @{
                if (Session["ID"] != null)
                {
                    <div class="navbar-collapse collapse">
                        <div class="navbar-header">
                            @Html.ActionLink("Pastebook", "Home", "PasteBook", new { area = "" }, new { @class = "navbar-brand" })
                        </div>

                        @using (Html.BeginForm("SearchView", "PasteBook", FormMethod.Post))
                        {
                            <div>
                                <ul class="nav navbar-nav">

                                    <li class="nav-item login">
                                        @Html.TextBox("keyword", null, new { @class = "form-control", placeholder = "Search", id = "keyword" })
                                    </li>
                                    <li class="nav-item login">
                                        <button class="btn  btn-primary" type="submit" id="searchButton">Search</button>
                                    </li>
                                </ul>
                            </div>
                        }

                        <div class="form-inline pull-right">
                            <ul class="nav navbar-nav">
                                <li class="nav-item login">
                                    Welcome  @Session["FirstName"] @Session["LastName"] !
                                </li>

                                <li class="nav-item">
                                    @*//www.bootply.com/7teIvGLIzY*@
                                    <button class="btn btn-default btn-lg btn-link">
                                        <span class="glyphicon glyphicon-globe"></span>
                                    </button>
                                </li>

                                <li class="nav-item">
                                    <button class="btn btn-default btn-lg btn-link">
                                        <span class="glyphicon glyphicon-user"></span>
                                    </button>
                                </li>
                                <li class="nav-item">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        Settings
                                        <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Edit Details", "Settings", "PasteBook") </li>
                                        <li>@Html.ActionLink("Change Email", "EmailSettings", "PasteBook") </li>
                                        <li>@Html.ActionLink("Change Password", "PasswordSettings", "PasteBook") </li>
                                    </ul>

                                </li>
                                <li class="login">
                                    <button type="submit" class="btn btn-primary" id="logoutButton">Logout</button>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
            }

            <div class="navbar-collapse collapse">
                <div class="form-inline pull-right">
                    <ul class="nav navbar-nav">
                        @RenderSection("Login", required: false)
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
